unit CGLogIn_u;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.Imaging.jpeg, MMSystem,
  Vcl.ExtCtrls;

type
  TCGLogIn = class(TForm)
    edtUsername: TEdit;
    edtPassword: TEdit;
    btnLogIn: TButton;
    lblRegister: TLabel;
    lblForgotPass: TLabel;
    imgLogInBG: TImage;
    procedure btnLogInClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  CGLogIn: TCGLogIn;

implementation

{$R *.dfm}


procedure TCGLogIn.btnLogInClick(Sender: TObject);
begin
  if btnLogIn.Caption = 'Login' then
    begin
      sndPlaySound('BG.wav', SND_NODEFAULT or SND_ASYNC);
      btnLogIn.Caption := 'Stop';
    end
  else
    begin
      sndPlaySound(nil, SND_NODEFAULT or SND_ASYNC);
      btnLogIn.Caption := 'Stop';
    end;


end;

end.
